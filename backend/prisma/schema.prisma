datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String
  birthday  DateTime
  createdAt DateTime  @default(now())

  drawings  Drawing[]
}

model Drawing {
  id        String   @id @default(uuid())
  imageData String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

